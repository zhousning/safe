- provide(:title, t('.title'))

- content_for :main_body do
  .container-fluid.p-0
    .row
      .col-md-12
        %table.text-center.table-sm{:'data-toggle' => "table", :"data-pagination"=>"true", :'data-id-table'=>"advancedTable"}
          %thead
            %tr
              %th{:scope => "col"} #
              %th.w-50{:scope => "col"}
                = Setting.examines.name
              %th{:scope => "col"}
                状态
              %th.w-50{:scope => "col"}
                设置
          %tbody
            - @examines.each_with_index do |examine, index|
              %tr
                %td{:scope => "row"}
                  = index+1
              
                %td
                  = examine.name
                %td
                  = examine_state(examine)
                %td
                  .container-fluid
                    .row.justify-content-center.align-items-center
                      = link_to "组织目录",  drct_org_factory_examine_path(idencode(@factory.id), examine), :class => "button button-primary button-small mr-1" 
                      - if examine.state != Setting.states.report
                        = link_to "上报水务集团",  report_factory_examine_path(idencode(@factory.id), examine), :class => "button button-primary button-small mr-1" 
                      -unless examine.hierarchy.blank?
                        = link_to "下载",  export_factory_examine_path(idencode(@factory.id), examine), :class => "button button-action button-small mr-1" 
                        -#
                          = fa_icon "long-arrow-right" 
                        -#
                          = link_to "编辑", edit_factory_examine_path(idencode(@factory.id), examine), :class => "button button-highlight button-small mr-1" 
                            = fa_icon "long-arrow-right" 
                        -#
                          = fa_icon "long-arrow-right" 
                          = link_to "历史版本",  examine_factory_documents_path(idencode(@factory.id), examine), :class => "button button-royal button-small mr-1" 
                          = link_to "删除",  examine, :method => :delete, :data => {:confirm => "确定删除吗?"}, :class => "button button-caution button-small" 
                      -#
                        = link_to "详细",  examine_path(examine), :class => "button button-primary button-small mr-1" 
      .col-md-12.site-theme-paginate-wrapper.d-flex.justify-content-center.mt-3
        = paginate @examines, window: 2, left: 1, right: 1 

= render "layouts/control_panel"

