.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for @inventory_item, :url => "/inventory_items/#{@inventory_item.id ? idencode(@inventory_item.id) : ''}", :builder => WebsiteFormBuilder, :html => {:'data-parsley-validate' => true} do |f|
        - if @inventory_item.errors.any?
          #error_explanation.alert.alert-danger.alert-dismissible.fade.show
            %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
              %span{"aria-hidden" => "true"} x 
            %h2= "#{pluralize(@inventory_item.errors.count, "错误")}:"
            %ul
              - @inventory_item.errors.full_messages.each do |msg|
                %li= msg
        .row
          .col-sm-12
            %h2.text-center
              = image_tag "gykg.jpg"
          .col-md-8.offset-md-2.p-5.border
            #flash_explanation
            .card.border-0.mb-3.rounded-0
              .card-header.bg-transparent.border-success
                %h5
                  = Setting.inventory_items.label
              .card-body
                %table.w-100.table-bordered.day-pdt-table
                  %tbody
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.inventory_items.name, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_field :name, :class => "form-control" , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.inventory_items.content, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_area :content, :class => "form-control", :rows => "10" , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.inventory_items.method, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_field :method, :class => "form-control" , :required => true
                      
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.inventory_items.ctg, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_field :ctg, :class => "form-control" 
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.inventory_items.state, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_field :state, :class => "form-control" 
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.inventory_items.place, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_field :place, :class => "form-control" 
                      
                    
          
          
          
          
          
            .form-group.row
              .col-3.offset-3
                = f.submit '保存', :class => "button  button-small button-action"
            -#
              .col-3.offset-1
                = link_to '返回', inventory_items_path, :class => "button button-small  button-caution"
