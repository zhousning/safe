.container-fluid
  .row.justify-content-sm-center
    .col-sm-12
      = form_for [@factory, @review, @recheck_result], :builder => WebsiteFormBuilder, :html => {:'data-parsley-validate' => true} do |f|
        - if @recheck_result.errors.any?
          #error_explanation.alert.alert-danger.alert-dismissible.fade.show
            %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
              %span{"aria-hidden" => "true"} x 
            %h2= "#{pluralize(@recheck_result.errors.count, "错误")}:"
            %ul
              - @recheck_result.errors.full_messages.each do |msg|
                %li= msg
        .row
          .col-sm-12
            %h2.text-center
              = image_tag "gykg.jpg"
              = Setting.recheck_results.label
          .col-md-8.offset-md-2.p-5.border
            #flash_explanation
            .card.border-0.mb-3.rounded-0
              -#
                .card-header.bg-transparent.border-success
                %h5
              .card-body
                %table.w-100.table-bordered.day-pdt-table
                  %tbody
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.recheck_results.worker, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_field :worker, :class => "form-control" , :required => true
                      
                    
                    
                      %td.p-2.text-center
                        = f.label Setting.recheck_results.signer, :class => "text-center"
                      %td.p-2.text-center
                        = f.text_field :signer, :class => "form-control" , :required => true
                      
                    
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.recheck_results.search_date, :class => "text-center"
                      %td.p-2.text-center
                        = f.date_field :search_date, :class => "form-control" , :required => true
                      
                    
                      %td.p-2.text-center
                        = f.label Setting.recheck_results.number, :class => "text-center"
                      %td.p-2.text-center
                        = f.number_field :number, :class => "form-control", :step => "any"  , :required => true
                      
                    
                    
                    %tr
                      %td.p-2.text-center
                        = f.label Setting.recheck_results.content, :class => "text-center"
                      %td.p-2.text-center{:colspan => 3}
                        = f.text_area :content, :class => "form-control", :rows => "10" , :required => true
                      
                    
          
          
            .form-group.row
              = f.label "复检结果文件", :class => "col-2 text-right col-form-label col-form-label text-right text-primary"
              .col-9
                %label.newbutton.button.button-primary
                  %p.append-url
                    = f.one_attachment("attach")
                  = f.file_field :attach, :class => "select-file", :onchange => "readFileName(this);", :accept => ".doc,.docx"
          
            -#
              .form-group.row
              = f.label "一个附件", :class => "col-2 text-right col-form-label col-form-label text-right text-primary"
              .col-9
                %label.newbutton.button.button-primary
                  %p.append-url
                    = f.one_attachment("idattach")
                  = f.file_field :idattach, :class => "select-file", :onchange => "readFileName(this);", :accept => ".doc,.docx"
          
          
          
            .form-group.row
              = f.label "其他附件", :class => "col-2 text-right col-form-label"
              .col-10
                .row
                  = f.fields_for :attachments do |attachment|
                    = render 'attachment_fields', f: attachment
                  .links
                    = link_to_add_association "添加文件", f, :attachments, :class => "button button-small button-primary"
          
          
            .form-group.row
              .col-3.offset-3
                = f.submit '保存', :class => "button  button-small button-action"
            -#
              .col-3.offset-1
                = link_to '返回', recheck_results_path, :class => "button button-small  button-caution"
