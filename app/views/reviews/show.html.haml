- provide(:title, t('.title'))

.container-fluid
  .row
    = render "layouts/control_sidebar"
    %main.col-md-11.ml-sm-auto.col-lg-11.p-3{:role => "main"}
      - content_for :card_header do
        %h5
          = fa_icon "newspaper-o", text: t(controller_name + "." + action_name + '.title')
          = link_to "/factories/#{idencode(@factory.id)}/#{controller_name}", :class => "button button-small  pull-right button-primary" do
            = fa_icon " chevron-left", text: Setting.systems.btn_back, right: false 
          - if @review.state == Setting.states.review
            = link_to "上报水务集团", "/factories/#{idencode(@factory.id)}/reviews/#{idencode(@review.id)}/report", :class => "button button-small  pull-right button-inverse mr-3", :data => {:confirm => "确认上报吗?"} 
      - content_for :card_body do
        .container-fluid
          .row
            .col-sm-12
              %h2.text-center
                = image_tag "gykg.jpg"
                = @grp_review.name
            .col-md-8.offset-2.p-5.border
              .card.border-0.mb-3.rounded-0
                -#
                  .card-header.bg-transparent.border-dark
                  %h5
                .card-body
                  %table.table-bordered.day-pdt-table.w-100.mb-3
                    %tbody
                    
                      %tr
                        %td.p-2.text-center
                          = Setting.reviews.search_date
                        %td.p-2.text-center
                          = @grp_review.search_date
                    
                        %td.p-2.text-center
                          = Setting.reviews.state
                        %td.p-2.text-center
                          = review_state(@review)
                      
                      %tr
                        %td.p-2.text-center
                          = Setting.reviews.content
                        %td.p-2.text-left{:colspan => 3}
                          = @grp_review.content
                    
                    
              .row
              
                .col-md-6
                  - unless @grp_review.attch.blank?
                    = link_to URI.decode(File.basename(@grp_review.attch_url)), download_append_grp_review_path(idencode(@grp_review.id))
              
              
              .row
                - @grp_review.attachments.each_with_index do |e, i|
                  .col-md-12
                    = link_to File.basename(URI.decode(e.file_url)), download_attachment_grp_review_path(idencode(@grp_review.id), :number => i, :ft => '')

        = render 'review_result'
        = render 'modify_result'
        = render 'recheck_result'
              
              
      = render "layouts/bootstrap/card"
